@model PracticaProgrmacion3.Models.informacion
@{
    ViewBag.Title = "Editar";
}

<div class="col-md-2"></div>
<div class="col-md-8">
    <h2>ELIMINAR LAVADO PATENTE: @ViewBag.nombre</h2>
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(x => x.lavado.Id)
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Tipos</label>
            <div class="col-sm-9">
                @Html.DropDownListFor(x => x.lavado.Idtipo, new SelectList(Model.listado, "idtipo", "Nombre"), htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">PATENTE</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(x => x.lavado.Patente, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">TAXI</label>
            <div class="col-sm-9">
                <div class="form-check">
                    @Html.CheckBoxFor(x => x.lavado.Taxi, htmlAttributes: new { @class = "form-check-input" })
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">HABITUAL</label>
            <div class="col-sm-9">
                <div class="form-check">
                    @Html.CheckBoxFor(x => x.lavado.Habitual, htmlAttributes: new { @class = "form-check-input" })
                </div>
            </div>
        </div>
        <div>
            <input type="submit" value="ELIMINAR" class="btn btn-primary" />
        </div>
    }
</div>
<div class="col-md-2"></div>
